<article class="user-card">
  <%= link_to user do %>
  <div class="img-container">
    <%= image_tag(user.photo, alt: 'user photo') %>
  </div>
  <div class="user-info">
      <h2><%= user.name %></h2>
    <div>
      <p>Number of posts: <%= user.posts_counter %></p>
    </div>
  </div>
  <% end %>
</article>