<div class="login-page">
  <h2 class="mb-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field input-group mb-3">
    <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field input-group mb-3">
    <%= f.text_field :name, placeholder: "name", class:"form-control"%>
  </div>

  <div class="field input-group mb-3">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (6 character minimun)", class:"form-control" %>
  </div>

  <div class="field input-group mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation", class:"form-control" %>
  </div>

  <div class="actions btn btn-primary mb-3" type="button">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>