<div class="container flex-column center">
  <h1 class="mid-gap">Add a comment</h1>
  <% flash.each do |type, msg| %>
    <% if type == 'success' %>
      <h3 class="mid-gap">
        <%= msg %>
      </h3>
    <% end %>
    <% if type == 'error' %>
      <h3>
        <%= msg %>
      </h3>
    <% end %>
  <% end %>
  <%= form_with model: @comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |f| %>
    <div>
      <%= f.label :text, class: "font-mid mid-gap" %><br>
      <%= f.text_area :text, size: "70x5", class: "border mid-gap", :required => true %>
    </div>
    <div>
      <%= f.submit "Add comment", class: "btn" %>
    </div>
  <% end %>
</div>
