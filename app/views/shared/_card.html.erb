<%= link_to user_path(user), class: "link-to" do %>
<article class="user-card flex-row border mt-3">
  <div class="img-container">
    <%= image_tag(user.photo, alt: 'user photo', class: "user-photo") %>
  </div>
  <div class="user-info flex-column center-between">
    <h3><%= user.name %></h3>
    <div class="posts-info">
      <p>Number of posts: <%= user.posts_counter %></p>
    </div>
  </div>
</article>
<% end %>
