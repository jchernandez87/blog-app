<div class="container flex-column center">
  <h1 class="mid-gap">Add a new post</h1>
  <%= form_with model: @post, url: user_posts_path, method: :post, local: true, scope: :post do |f| %>
    <div>
      <%= f.label :title, class: "font-mid mid-gap" %><br>
      <%= f.text_field :title, class: "border mid-gap", :required => true %>
    </div>
    
    <div>
      <%= f.label :text, class: "font-mid mid-gap" %><br>
      <%= f.text_area :text, size: "70x5", class: "border mid-gap", :required => true %>
    </div>

    <div>
      <%= f.submit "Add post", class: "btn" %>
    </div>
  <% end %>
</div>
